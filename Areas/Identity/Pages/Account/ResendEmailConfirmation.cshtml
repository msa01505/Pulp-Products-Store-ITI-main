@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<h1 class="text-center p-2 " style="color: #7BB38E">@ViewData["Title"]</h1>
<h4 class="text-center p-2 " style="color: #7BB38E">Enter your email.</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger text-center"></div>
            <div class="col-6 m-auto shadow rounded-lg p-5">

                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit"  class="btn btn col-12 m-auto text-light" style="background-color:#7BB38E">Resend</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

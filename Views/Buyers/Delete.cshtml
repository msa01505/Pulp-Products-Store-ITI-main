@model Pulp.Models.Buyer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1  class="btn col-12 m-auto font-weight-bold" style="color: #7BB38E;font-size:xx-large; font-family:'Times New Roman', Times, serif">Delete</h1>

    <h3 style="color: red; text-align:center" class="m-auto">Are you sure you want to delete this Buyer?</h3>
    <div class="row">
        <div class="col-md-6 m-auto">
            @*<h4>Buyer</h4>*@
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Username)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Username)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PictureUri)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PictureUri)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="UserID" />

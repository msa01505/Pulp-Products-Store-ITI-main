@model IEnumerable<Pulp.Models.OrderItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 style="color: #7BB38E" class="font-weight-bolder">Index</h1>



    <p>
        <a asp-action="Create" style="color: #7BB38E" class="font-weight-bold">Create New Order</a>

    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ItemOrdered)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Units)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemOrdered.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Units)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.OrderItemID" class="btn btn-outline-primary">Edit</a> 
                        <a asp-action="Details" asp-route-id="@item.OrderItemID" class="btn btn-outline-success">Details</a> 
                        <a asp-action="Delete" asp-route-id="@item.OrderItemID" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


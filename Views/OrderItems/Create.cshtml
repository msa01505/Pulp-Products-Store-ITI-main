@model Pulp.ViewModels.OrderItemCategoryItem

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h4 class="text-center p-5 mt-3" style="color: #7BB38E">Make an Order</h4>
    <div class="row">
        <div class="col-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                <div class="col-6 m-auto shadow rounded-lg p-5">

                    <div class="form-group">
                        <label class="control-label">Picked Item</label>

                        <input type="hidden" asp-for="@Model.orderItem.CategoryItemID" value="@Model.categoryItem.CategoryItemID" placeholder="Picked Item" />
                        <input readonly asp-for="@Model.categoryItem.Name" class="form-control" placeholder="@Model.categoryItem.Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="orderItem.Price" class="control-label"></label>

                        <input readonly asp-for="orderItem.Price" value="@Model.categoryItem.Price" class="form-control" placeholder="Price" />
                        <span asp-validation-for="orderItem.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="orderItem.Units" class="control-label"></label>

                        <input value="1" min="1" type="number" asp-for="orderItem.Units" class="form-control" placeholder="Units" />
                        <span asp-validation-for="orderItem.Units" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn col-12 m-auto text-light" style="background-color:#7BB38E"/>
                    </div>

                    <div class="m-auto text-center">
                        <a asp-action="Index" class="text-center col-12 " style="color:#7BB38E">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

\</div>





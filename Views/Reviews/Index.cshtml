@model IEnumerable<Pulp.Models.Review>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div>

        <h1 class="text-center m-5 " style="color: #7BB38E
">
            Reviews
        </h1>
     
    
    </div>

    <div class="container-fluid mt-3 mb-5">
        <div class="col-lg-6 col-md-10 col-sm-12 m-auto">

            <a asp-action="Create" class="text-decoration-none text-warning ">
                <svg xmlns="http://www.w3.org/2000/svg" width="26" height="21" fill="#7BB38E" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                </svg>
            </a>
        </div>

            @foreach (var item in Model)
            {
                <div class="col-12 m-3">

                    <div class="col-lg-6 col-md-10 col-sm-12 m-auto text-center shadow box-shadow m-3 pt-4  rounded-lg">


                        @for (int i = 0; i < item.Rating; i++)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#7BB38E" class="bi bi-star-fill text-warning" viewBox="0 0 16 16">
                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                            </svg>
                        }
                        @for (int j = 0; j < (5 - item.Rating); j++)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                            </svg>
                        }

                        <p class=" ">
                            @item.Comment
                        </p>

                        <td>
                            <a  asp-action="Details" asp-route-id="@item.ReviewID" class="btn btn-outline-success btn-sm">Details</a> 
                            @if(ViewBag.currBuyer == item.BuyerID)
                            {
                            <a  asp-action="Edit" asp-route-id="@item.ReviewID" class="btn btn-outline-success btn-sm">Edit</a> 
                            <a  asp-action="Delete" asp-route-id="@item.ReviewID" class="btn btn-outline-success btn-sm">Delete</a>
                            }
                        </td>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 300">
                            <path fill="#7BB38E" fill-opacity="1" d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
                        </svg>

                    </div>
                </div>

            }

        </div>

    </div>

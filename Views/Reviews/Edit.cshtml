@model Pulp.Models.Review

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center" style="color: #7BB38E">Edit</h1>

    <h4 class="text-center" style="color: #7BB38E">Review</h4>
    <div class="row">
        <div class="col-12">
            <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center" ></div>
                    <input type="hidden" asp-for="ReviewID" />
                    <div class="col-6 m-auto shadow rounded p-5" >
                        <div class="form-group">
                            <input asp-for="Rating" class="form-control" placeholder="Rating" />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Comment" class="form-control" placeholder="Comment" />
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn col-12 m-auto text-light" style="background-color: #7BB38E" />
                        </div>
                        <div class="m-auto text-center">
                            <a asp-action="Index" class="text-center col-12 " style="color:#7BB38E">Back to List</a>
                        </div>

                    </div>
            </form>
        </div>
    </div>

</div>



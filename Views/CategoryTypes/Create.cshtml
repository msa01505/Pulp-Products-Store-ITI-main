@model Pulp.ViewModels.BusinessCategoryType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
   // Pulp currentRes = (Pulp)TempData["PulpID"];
}
<div class="container-fluid">
    <h1 class="btn col-12 m-auto font-weight-bold" style="color: #7BB38E;font-size:xx-large; font-family:'Times New Roman', Times, serif">Create New CategoryType</h1>

    @*<h4 >CategoryType</h4>*@
    <hr />
    <div class="row">
        <div class="col-md-4 m-auto shadow-lg p-5">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.categoryType.Type" class="control-label" style="color: #7BB38E;"></label>
                    <input asp-for="@Model.categoryType.Type" class="form-control" />
                    <span asp-validation-for="categoryType.Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.business.BusinessID" class="control-label" style="color: #7BB38E;"></label>
                    <input asp-for="@Model.business.BusinessID" readonly value="@Model.business.BusinessID" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn col-12 m-auto font-weight-bold " style="background-color: #7BB38E; color:white;" />
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 m-auto">
            <a asp-action="Details" asp-controller="Businesses" asp-route-id="@Model.business.BusinessID" style="color: #7BB38E; margin:auto">Back to List</a>
        </div>
        </div>
    </div>



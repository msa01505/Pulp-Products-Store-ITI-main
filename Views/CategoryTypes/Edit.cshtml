@model Pulp.Models.CategoryType

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="btn col-12 m-auto font-weight-bold" style="color: #7BB38E;font-size:xx-large; font-family:'Times New Roman', Times, serif">Edit CategoryType</h1>

    @*<h4>CategoryType</h4>*@
    <hr />
    <div class="row">
        <div class="col-md-4 m-auto shadow-lg p-5">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CatrgoryTypeID" />
                <div class="form-group">
                    <label asp-for="Type" class="control-label" style="color: #7BB38E;"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BusinessID" class="control-label" style="color: #7BB38E;"></label>
                    <input asp-for="BusinessID" readonly value="@Model.BusinessID" />


                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn col-12 m-auto font-weight-bold" style="background-color: #7BB38E; color:white;" />
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 m-auto">
            <a asp-action="Details" asp-controller="Businesses" asp-route-id="@Model.BusinessID" style="color: #7BB38E; margin:auto">Back to List</a>
        </div>
        </div>
    </div>



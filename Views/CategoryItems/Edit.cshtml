@model Pulp.ViewModels.CategoryItemViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="btn col-12 m-auto font-weight-bold" style="color: #7BB38E;font-size:xx-large; font-family:'Times New Roman', Times, serif">Edit CategoryItem</h1>

    @*<h4 class="btn col-12 m-auto font-weight-bold" style="color: #7BB38E;font-size:xx-large; font-family:'Times New Roman', Times, serif">CategoryItem</h4>*@
    <hr />
    <div class="row">
        <div class="col-md-4 m-auto shadow-lg p-5">
            <form enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryItemID" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label" style="color: #7BB38E;"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label" style="color: #7BB38E;"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label" style="color: #7BB38E;"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                @*  asp-for tag helper is set to "Photo" property. "Photo" property type is IFormFile
                    so at runtime asp.net core generates file upload control (input type=file)
                *@

                <div class="form-group row">
                    <label asp-for="Image" class="col-sm-2 col-form-label" style="color: #7BB38E;"></label>
                    <div class="col-sm-10">
                        <div class="custom-file">
                            <input asp-for="Image" class="form-control custom-file-input">
                            <label class="custom-file-label">Choose File...</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryTypeId" class="control-label" style="color: #7BB38E;"></label>
                    <input type="hidden" asp-for="CategoryTypeId" value="@ViewBag.CategoryTypeId.CatrgoryTypeID" />
                    <input readonly value="@ViewBag.CategoryTypeId.Type" />
                    @* <select asp-for="CategoryTypeId" class="form-control" asp-items="ViewBag.CategoryTypeId"></select>*@
                    <span asp-validation-for="CategoryTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn col-12 m-auto font-weight-bold" style="background-color: #7BB38E; color:white;" />
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 m-auto">
            <a asp-action="Details" asp-controller="Businesses" asp-route-id="@ViewBag.ResID" style="color: #7BB38E; margin:auto">Back to List</a>
        </div>
        </div>

    </div>


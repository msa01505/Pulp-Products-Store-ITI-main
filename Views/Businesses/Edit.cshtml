@model Pulp.ViewModels.BusinessViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid">
    <h1 class="text-center" style="color: #7BB38E">Edit</h1>

    <h4 class="text-center" style="color: #7BB38E">Business</h4>
    <div class="row">
        <div class="col-12">
            <form enctype="multipart/form-data" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                    <input type="hidden" asp-for="BusinessID" />
                    <div class="col-6 m-auto shadow rounded p-5">
                        <div class="form-group">
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Describtion" class="form-control" placeholder="Describtion" />
                            <span asp-validation-for="Describtion" class="text-danger"></span>
                        </div>
                        @*  asp-for tag helper is set to "Photo" property. "Photo" property type is IFormFile
        so at runtime asp.net core generates file upload control (input type=file)
                        *@

                        <div class="form-group row">
                            <label asp-for="Image" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <div class="custom-file">
                                    <input asp-for="Image" class="form-control custom-file-input">
                                    <label class="custom-file-label">Choose File...</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn col-12 m-auto text-light" style="background-color: #7BB38E" />
                        </div>
                        <div class="m-auto text-center">
                            <a asp-action="Index" class="text-center col-12 "style="color:#7BB38E" >Back to List</a>
                        </div>

                    </div>
            </form>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

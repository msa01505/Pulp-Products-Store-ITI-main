@model Pulp.ViewModels.CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}
<div class="container-fluid">
    <h1 class="btn col-12 m-auto font-weight-bold" style="color: #7BB38E;font-size:xx-large; font-family:'Times New Roman', Times, serif">Create New Role</h1>
    <div class="row">
        <div class=" col-md-4 col-sm-8 m-auto">

            <form asp-action="CreateRole" method="post" class="mt-3">
                <div asp-validation-summary="All" class="text-danger">
                </div>

                <div class="form-group">
                    @*<label asp-for="RoleName" class="col-sm-2 col-form-label"></label>*@
                    <div>
                        <input asp-for="RoleName" class="form-control mx-auto col-md-12 col-sm-12" placeholder="Role Name" style="width:min-content;">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group m-auto">
                        <button type="submit" class="btn font-weight-bold" style="width: auto; background-color: #7BB38E;color: white;">
                            Create
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

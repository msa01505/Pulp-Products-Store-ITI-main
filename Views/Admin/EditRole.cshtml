@model Pulp.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}
<div class="container-fluid">
    <h1 class="btn col-12 m-auto font-weight-bold" style="color: #7BB38E;font-size:xx-large; font-family:'Times New Roman', Times, serif">Edit Role</h1>
    <div class="row">
        <div class="col-6 m-auto">
            <form method="post" class="mt-3">
                <div class="form-group row ">

                    <label asp-for="Id" class="col-sm-2 col-form-label font-weight-bold"></label>
                    <div class="col-sm-10">
                        <input asp-for="Id" disabled class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="RoleName" class="col-sm-2 col-form-label font-weight-bold"></label>
                    <div class="col-sm-10">
                        <input asp-for="RoleName" class="form-control">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <div class="m-auto">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-action="ListRoles" class="btn alert-light" style="width:auto; color: red">Cancel</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="btn col-12 font-weight-bold" style="color: #7BB38E;font-size:xx-large; font-family:'Times New Roman', Times, serif">Users in this role</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="m-auto p-3" >
                        @*<div class="row">
                            <div class="form-group m-auto m">*@
                    <a asp-action="EditUsersInRole" asp-controller="Admin" asp-route-roleId="@Model.Id" class="btn m-auto mb-3" style="background-color: #7BB38E; color:white;">Add or Remove Users</a>
                    
                </div>
                </div>
            </form>
            </div>
        </div>
    </div>

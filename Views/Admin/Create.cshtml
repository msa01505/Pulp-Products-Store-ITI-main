@model Pulp.Models.Admin

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="btn col-12 m-auto font-weight-bold" style="color: #7BB38E;font-size:xx-large; font-family:'Times New Roman', Times, serif">Create New Admin</h1>

    @*<h4 class="btn col-12 m-auto" style="color: #7BB38E; font-size: larger">Admin</h4>*@
    <hr />
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-12 m-auto shadow-lg p-5">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Role" class="control-label" style="color: #7BB38E;"></label>
                    <select asp-for="Role" class="form-control">
                        <option value="@Pulp.Models.Roles.CustomerService">Customer Service</option>
                        <option value="@Pulp.Models.Roles.StaffService">Staff Service</option>

                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Username" class="control-label"></label>*@
                    <input asp-for="Username" class="form-control" placeholder="Username"/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="BirthDate" class="control-label"></label>*@
                    <input asp-for="BirthDate" class="form-control" placeholder="BirthDate" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="PictureUri" class="control-label"></label>*@
                    <input asp-for="PictureUri" class="form-control" placeholder="PictureUri" />
                    <span asp-validation-for="PictureUri" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <input type="submit" value="Create" class="btn col-12 m-auto font-weight-bold " style="background-color: #7BB38E; color:white;"/>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 m-auto">
            <a asp-action="Index" style="color: #7BB38E; margin:auto">Back to List</a>
        </div>
        
    </div>
</div>


